mixin reviewForm(store)
    form(action=`/reviews/${store._id}` method="POST")
        textarea(name="text", placeholder="Please leave a review" cols="50", rows="10")
        .reviewer__meta
            .reviewer__stars
                each num in [5,4,3,2,1]
                    // don't want the radio buttons themselves to show up, but want
                    // to use the labels to show up to show stars
                    input(type="radio" required id=`star${num}` name="rating" value=num)
                    label(for=`star${num}` #{num})  Stars
            input.button(type="submit" value="Submit Review")


